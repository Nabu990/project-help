<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>Dashboard</h1>
            <nav>
                <ul>
                    <li><a href="/logout">Logout</a></li>
                    <li><a href="/#submit-project" class="btn">Add Project</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <main>
        <section class="user-info">
            <h2>Welcome, <%= user.username %>!</h2>
            <img src="/uploads/<%= user.photo %>" alt="Profile Photo" width="200">
            <p>Email: <%= user.email %></p>
        </section>
        
        <section class="projects">
            <h2>Your Projects</h2>
            <div class="project-list">
                <% projects.forEach(project => { %>
                    <div class="project-item">
                        <h3><%= project.title %></h3>
                        <img src="/uploads/<%= project.image %>" alt="Project Image" width="200">
                        <p><%= project.description %></p>
                        <p><small>Submitted on <%= project.date.toDateString() %></small></p>
                    </div>
                <% }); %>
            </div>
        </section>
        
        <section class="activities">
            <h2>Recent Activities</h2>
            <ul>
                <% activities.forEach(activity => { %>
                    <li><%= activity.user %> - <%= activity.action %> on <%= activity.date.toDateString() %></li>
                <% }); %>
            </ul>
        </section>
    </main>
    
    <footer>
        <p>&copy; 2024 Your Company. All rights reserved.</p>
    </footer>
</body>
</html>


